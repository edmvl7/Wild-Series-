{% extends 'base.html.twig' %}

{% block title %} All categories {% endblock %}

{% block body %}
    <div class="principal-container">
        <h1 class="principal-title">Toutes les categories : </h1>
        {% for category in categories %}
            <ul class="list-cat">

                <li class="category-item"><h2>  <a href="{{ path("category_show", { categoryName: category.name }) }}">  {{ category.name }}</a></h2></li>
            </ul>
        {% else %}
            Aucune série trouvée.
        {% endfor %}

        <a href="{{ path('app_index') }}">
            Retour à l'accueil
        </a>
    </div>
{% endblock %}